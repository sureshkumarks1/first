                    />
                  </div>
                  <div class="pt-2">
                    <% if(userData){%> <% userData.forEach(function(user){ %>
                    <h6 class="pt-1">Name : <%= user.name%></h6>

                    <p>
                      Email : <%= user.email %>, Mobile No: <%= user.mobile %>,
                      <a href="#" class="px-2"></a>
                    </p>
                    <% }); %> <% } %>
                  </div>
                </div>

                <hr />
                <!-- Button trigger modal -->
                <p class="d-inline-flex gap-1">
